                                    @{
                                        for (int c = 0; c < 1; c++)
                                        {
                                            if (Model.Count > 0)
                                            {
                                                <th>
                                                    <h5>@x</h5>
                                                    <h5>@Model[0].Id</h5>
                                                    <h5>@Model[0].AdSoyad</h5>
