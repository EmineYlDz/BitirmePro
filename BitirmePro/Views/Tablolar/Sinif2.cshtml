@model List<BitirmePro.Models.Ogrenci1>
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>M-205</title>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <style>
        .con {
            margin: 30px;
            padding: 30px;
            float: left;
            width: 2000px;
        }

        .column {
            float: left;
            width: 320px;
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        table, th, td {
            border: 2px solid black;
            border-collapse: collapse;
            text-align: left;
            padding: 15px;
            margin: 5px;
            float: right;
        }
    </style>
    @{ int x = 1; }
</head>
